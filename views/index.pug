extends layout

block content
  main.container
    .hero
      .hero-text
        h1 Automation Builder
        p Formuliere eine Anforderung und erhalte sofort eine Home Assistant Automation als YAML.
      .hero-badge Smart Reminders
    .card.builder
      form#automationForm.prompt-form
        label(for="automationPrompt") Automation Wunsch
        .prompt-row
          input#automationPrompt(type="text" name="prompt" placeholder="z.B. Wenn die Haustür abends öffnet, Licht an" autocomplete="off")
          button(type="submit") Generieren
      p#automationStatus.results-info.is-hidden
      .prompt-output#automationResult.is-hidden
        .result-header
          .result-text
            h3#automationTitle
            p#automationMessage
          .result-actions
            button#clearAutomation(type="button") Clear
        .editor-shell
          #automationEditor.editor
        .refine-box
          label(for="automationRefine") Verfeinern / Rückfragen
          .refine-row
            input#automationRefine(type="text" name="refine" placeholder="z.B. nur werktags, Push aufs iPhone" autocomplete="off")
            button#refineAutomation(type="button") Verfeinern
